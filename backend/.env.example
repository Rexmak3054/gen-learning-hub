# FastAPI Backend Environment Variables

# FastAPI Configuration
DEBUG=True
PORT=8000
LOG_LEVEL=INFO

# OpenAI Configuration (for research agent)
OPENAI_API_KEY=your-openai-api-key

# AWS Configuration (for your existing MCP tools)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
OS_ENDPOINT=your-opensearch-endpoint
DDB_TABLE=Courses

# MCP Tools Configuration
MCP_COURSE_SERVER_PATH=../course_server.py

# Optional: Redis configuration for caching
REDIS_URL=redis://localhost:6379/0

# CORS Settings (automatically configured for localhost)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
